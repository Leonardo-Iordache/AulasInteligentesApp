<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/idAulaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="50dp"
        app:layout_constraintEnd_toStartOf="@+id/fechaText"
        app:layout_constraintStart_toStartOf="@+id/fechaText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fechaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idAulaText" />

    <TextView
        android:id="@+id/valorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="50dp"

        app:layout_constraintEnd_toStartOf="@+id/fechaText"
        app:layout_constraintStart_toStartOf="@+id/fechaText"
        app:layout_constraintTop_toBottomOf="@+id/fechaText" />
</androidx.constraintlayout.widget.ConstraintLayout>