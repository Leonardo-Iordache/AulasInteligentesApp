<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".front.mainscreen.MainMenuActivity">

    <Button
        android:id="@+id/prediccionButton"
        android:layout_width="194dp"
        android:layout_height="0dp"
        android:layout_marginBottom="331dp"
        android:text="QUIERO UN\nAULA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consultarDatosButton" />

    <Button
        android:id="@+id/consultarDatosButton"
        android:layout_width="194dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:text="CONSULTAR\nDATOS"
        app:layout_constraintBottom_toTopOf="@+id/prediccionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="147dp"
        android:text="AULAS INTELIGENTES"
        app:layout_constraintBottom_toTopOf="@+id/consultarDatosButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>